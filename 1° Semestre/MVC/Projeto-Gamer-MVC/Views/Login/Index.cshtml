@model Jogador

@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="~/css/login.css">
</head>

<!-- FORMULÁRIO DE LOGIN -->
<main class="fundo-login">
    <div class="bkg-login">
        <form class="frm-login" method="post" action='@Url.Action("Logar")'>
            <div class="login-title">
                <hr class="login-line">
                <h1>Login</h1>
            </div>
            <div class="frm-linha">
                <div class="bkg-input">
                    <img src="~/assets/vector-user.svg" alt="ícone de usuário">
                    <input type="email" name="Email" id="email" placeholder="Digite seu e-mail:" required>
                </div>
            </div>
            <div class="frm-linha">
                <div class="bkg-input">
                    <img src="~/assets/vector-key.svg" alt="ícone de chave">
                    <input type="password" name="Senha" id="password" placeholder="Digite sua senha:" required>
                </div>
            </div>

            <button class="btn-logar" type="submit">Logar</button>

            <br>

            @TempData.Peek("Message")

        </form>
    </div>

</main>

<h1>Tela de Login</h1>



<form method="post" action='@Url.Action("Logar")'>

    <label for="">Email</label>
    <input type="email" name="Email" required>

    <label for="">Senha</label>
    <input type="password" name="Senha" required>

    <button type="submit">Logar</button>
</form>